
<div class="banner">
  <div class="block-titre">
    <h1>Sav any kind of movies</h1>
    <h2>Classic</h2>
  </div>
</div>

<div class="container">
  <div class="container-my-lists">
    <h3>My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-dark" %>
  </div>
  <div class="cards">

    <% @lists.each do |list|%>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @lists[2].bookmarks.first.movie.poster_url%>)">
              <h3><%= link_to list.name, list_path(list) %></h3>
      </div>
    <%end%>
    </div>
</div>
